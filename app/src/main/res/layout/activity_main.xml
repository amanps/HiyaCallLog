<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aman.com.hiyacalllog.ui.main.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/call_log_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <ProgressBar
        android:id="@+id/progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/permissions_denied_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/permissions_denied_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permissions_denied"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/understand_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/i_understand"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"/>
    </LinearLayout>



</FrameLayout>
